@model List<ElectoralApp.Models.UserModel>

@{
    ViewBag.Title = "ProfileList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ProfileList</h2>

<div class="br-mainpanel">
    <div class="br-pageheader pd-y-15 pd-md-l-20">
        <nav class="breadcrumb pd-0 mg-0 tx-12">
            <a class="breadcrumb-item" href="#">Home</a>
            <a class="breadcrumb-item" href="#">My Account</a>
            <span class="breadcrumb-item active">Profiles List</span>
        </nav>
    </div>
    <div class="br-pagebody pd-x-30">
        <div class="row row-sm mg-t-20">
            <div class="col-12">
                <div class="card pd-0 bd-0 shadow-base">
                    <div class="pd-x-30 pd-t-30 pd-b-15">
                        <div class="table-wrapper">
                            <table id="datatable2" class="table display responsive nowrap">
                                <thead>
                                    <tr>
                                        <th>First name</th>
                                        <th>Last name</th>
                                        <th>Relation</th>
                                        <th>Relation Name</th>
                                        <th>Gender</th>
                                        <th>Email</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Relation)</td>
                                        <td>@Html.DisplayFor(modelItem => item.RelationFirstname)  @Html.DisplayFor(modelItem => item.RelationLasttname)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        
                                        <td>
                                            <a href="#"><i class="fa fa-eye"></i></a> |  <a href="@Url.Action("NewUser", "Login",new { id=item.Id })"><i class="fa fa-pencil"></i></a>  |  <a href="@Url.Action("DeleteUser", "Login",new { id=item.Id })"><i class="fa fa-trash"></i></a>

                                        </td>
                                    </tr>
                                    }
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
